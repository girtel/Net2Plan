<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

    <id>Net2Plan-lib</id>

    <formats>
        <format>jar</format>
    </formats>

    <baseDirectory>.</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/resources/common</directory>
            <outputDirectory>resources/common</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/com/net2plan/interfaces</directory>
            <outputDirectory>com/net2plan/interfaces</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/com/net2plan/internal</directory>
            <outputDirectory>com/net2plan/internal</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/com/net2plan/libraries</directory>
            <outputDirectory>com/net2plan/libraries</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/com/net2plan/utils</directory>
            <outputDirectory>com/net2plan/utils</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/com/net2plan/io</directory>
            <outputDirectory>com/net2plan/io</outputDirectory>
            <includes>
                <include>IONet2Plan.class</include>
            </includes>
        </fileSet>
        <!-- Adding resources -->
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/interfaces</directory>
            <outputDirectory>com/net2plan/interfaces</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/*.java</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/internal</directory>
            <outputDirectory>com/net2plan/internal</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/*.java</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/libraries</directory>
            <outputDirectory>com/net2plan/libraries</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/*.java</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/utils</directory>
            <outputDirectory>com/net2plan/utils</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/*.java</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/io</directory>
            <outputDirectory>com/net2plan/io</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/*.java</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>