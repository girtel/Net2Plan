<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

    <id>Net2Plan-src</id>

    <formats>
        <format>zip</format>
    </formats>

    <baseDirectory>.</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/cli</directory>
            <outputDirectory>com/net2plan/cli</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/gui</directory>
            <outputDirectory>com/net2plan/gui</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/interfaces</directory>
            <outputDirectory>com/net2plan/interfaces</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/internal</directory>
            <outputDirectory>com/net2plan/internal</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/libraries</directory>
            <outputDirectory>com/net2plan/libraries</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/utils</directory>
            <outputDirectory>com/net2plan/utils</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/java/com/net2plan/io</directory>
            <outputDirectory>com/net2plan/io</outputDirectory>
            <includes>
                <include>IONet2Plan.java</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/resources</directory>
            <outputDirectory>resources</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>common/errorAnimation.gif</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>