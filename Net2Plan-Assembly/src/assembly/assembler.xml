<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <!-- Copy the lib directory -->
        <fileSet>
            <directory>${project.basedir}/src/main/external-resources/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- Copying user guide -->
        <fileSet>
            <directory>${project.basedir}/src/main/external-resources/help</directory>
            <outputDirectory>doc/help</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <!-- Copy the workspace folder -->
        <fileSet>
            <directory>${project.basedir}/Net2Plan-Core/Net2Plan-Lib/src/main/external-resources/data</directory>
            <outputDirectory>workspace/data</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <!-- Copy the documentation -->
        <!--
        <fileSet>
            <directory>${project.build.directory}/site/apidocs</directory>
            <outputDirectory>doc/javadoc</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>-->
        <!--<fileSet>
            <directory>${project.basedir}/src/main/resources/javadoc</directory>
            <outputDirectory>doc/javadoc</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>-->
    </fileSets>

    <files>
        <!-- Create the BuiltInExample.jar file and copy it into the workspace directory -->
        <file>
            <source>${project.basedir}/Net2Plan-Examples/target/${artifactId}-${version}.jar</source>
            <outputDirectory>workspace</outputDirectory>
            <destName>BuiltInExamples.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/Net2Plan-Core/Net2Plan-Lib/target/${artifactId}-${version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>Net2Plan-lib.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/Net2Plan-IO/target/${artifactId}-${version}.jar</source>
            <outputDirectory>plugins</outputDirectory>
            <destName>defaultIO.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/Net2Plan-CLI/Net2Plan-CLI-Core/target/${artifactId}-${version}.jar</source>
            <destName>Net2Plan-cli.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/Net2Plan-CLI/Net2Plan-CLI-Plugin/target/${artifactId}-${version}.jar</source>
            <outputDirectory>plugins</outputDirectory>
            <destName>defaultCLITools.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/Net2Plan-GUI/target/${artifactId}-${version}.jar</source>
            <outputDirectory>plugins</outputDirectory>
            <destName>defaultGUITools.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/Net2Plan-Core/Net2Plan-Main/target/${artifactId}-${version}.jar</source>
            <destName>Net2Plan.jar</destName>
        </file>
    </files>
</assembly>