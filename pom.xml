<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.net2plan</groupId>
    <artifactId>net2plan</artifactId>
    <version>0.4.0</version>
    <name>Net2Plan</name>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <!-- Maven 3.3.1+ required -->
    <dependencies>
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
            <version>1.3</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.collections</groupId>
            <artifactId>collections-generic</artifactId>
            <version>4.01</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.codehaus.woodstox</groupId>
            <artifactId>stax2-api</artifactId>
            <version>4.0.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-math3</artifactId>
            <version>3.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>18.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jgrapht</groupId>
            <artifactId>jgrapht-core</artifactId>
            <version>0.9.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.java.dev.jna</groupId>
            <artifactId>jna</artifactId>
            <version>4.1.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jsoup</groupId>
            <artifactId>jsoup</artifactId>
            <version>1.8.3</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-3d</artifactId>
            <version>2.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-algorithms</artifactId>
            <version>2.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-api</artifactId>
            <version>2.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-graph-impl</artifactId>
            <version>2.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-io</artifactId>
            <version>2.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-jai</artifactId>
            <version>2.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-samples</artifactId>
            <version>2.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-visualization</artifactId>
            <version>2.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.miglayout</groupId>
            <artifactId>miglayout-core</artifactId>
            <version>5.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.miglayout</groupId>
            <artifactId>miglayout-swing</artifactId>
            <version>5.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.parallelcolt</groupId>
            <artifactId>parallelcolt</artifactId>
            <version>0.10.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.woodstox</groupId>
            <artifactId>woodstox-core</artifactId>
            <version>5.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.healthmarketscience.jackcess</groupId>
            <artifactId>jackcess</artifactId>
            <version>2.1.3</version>
        </dependency>
        <dependency>
            <groupId>local</groupId>
            <artifactId>jom-0.1.16</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun</groupId>
            <artifactId>tools</artifactId>
            <version>1.4.2</version>
            <scope>system</scope>
            <systemPath>${java.home}/../lib/tools.jar</systemPath>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <!--  Adding JOM library as a local dependency through a local repository -->
            <!-- This repository is found in the folder 'repo' -->
            <id>project</id>
            <url>file://${project.basedir}/src/main/resources/repo</url>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>ppm</id>

            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <!-- Necessary for correctly including tools.jar (javadoc creator) into the project-->
                    <!-- By default, Maven tries to load the 1.7 jar which does not correspond with the one in 1.8 -->
                    <name>java.vendor</name>
                    <value>Oracle Corporation</value>
                </property>
                <jdk>[1.8,)</jdk>
            </activation>

            <build>
                <plugins>
                    <!-- Ignore default jar generation -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <id>default-jar</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Modifies the compiler to jdk 1.8 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.5.1</version>
                        <configuration>
                            <compilerVersion>1.8</compilerVersion>
                            <source>1.8</source>
                            <target>1.8</target>
                            <failOnError>true</failOnError>
                        </configuration>
                    </plugin>

                    <!-- Downloads dependencies into local folder -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.10</version>
                        <configuration>
                            <outputDirectory>${project.basedir}/src/main/resources/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                        <executions>
                            <execution>
                                <id>copy-dependencies</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Assembles the final project -->
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>2.6</version>
                        <configuration>
                            <appendAssemblyId>true</appendAssemblyId>
                        </configuration>
                        <executions>
                            <execution>
                                <id>non-executables</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/assembly/Net2PlanLibAssembly.xml</descriptor>
                                        <descriptor>src/assembly/Net2PlanSrcAssembly.xml</descriptor>
                                        <descriptor>src/assembly/defaultCLIAssembly.xml</descriptor>
                                        <descriptor>src/assembly/defaultGUIAssembly.xml</descriptor>
                                        <descriptor>src/assembly/defaultIOAssembly.xml</descriptor>
                                        <descriptor>src/assembly/guiTrafficDesignAssembly.xml</descriptor>
                                        <descriptor>src/assembly/BuiltInExamplesAssembly.xml</descriptor>
                                    </descriptors>
                                    <archive>
                                        <manifestEntries>
                                            <!--@formatter:off--><Class-Path>lib/Net2Plan-lib.jar lib/collections-generic-4.01.jar lib/commons-cli-1.3.jar lib/commons-lang3-3.4.jar lib/guava-18.0.jar lib/jgrapht-core-0.9.1.jar lib/jna-4.1.0.jar lib/jom-0.1.16-1.0.jar lib/jsoup-1.8.3.jar lib/jung-algorithms-2.0.1.jar lib/jung-api-2.0.1.jar lib/jung-graph-impl-2.0.1.jar lib/jung-io-2.0.1.jar lib/jung-visualization-2.0.1.jar lib/miglayout-core-5.0.jar lib/miglayout-swing-5.0.jar lib/parallelcolt-0.10.1.jar lib/stax2-api-4.0.0.jar lib/woodstox-core-5.0.1.jar</Class-Path><!--@formatter:on-->
                                        </manifestEntries>
                                    </archive>
                                </configuration>
                            </execution>
                            <execution>
                                <id>net2plan</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/assembly/Net2PlanAssembly.xml</descriptor>
                                    </descriptors>
                                    <archive>
                                        <manifest>
                                            <mainClass>com.net2plan.gui.GUINet2Plan</mainClass>
                                        </manifest>
                                        <manifestEntries>
                                            <!--@formatter:off--><Class-Path>lib/Net2Plan-lib.jar lib/collections-generic-4.01.jar lib/commons-cli-1.3.jar lib/commons-lang3-3.4.jar lib/guava-18.0.jar lib/jgrapht-core-0.9.1.jar lib/jna-4.1.0.jar lib/jom-0.1.16-1.0.jar lib/jsoup-1.8.3.jar lib/jung-algorithms-2.0.1.jar lib/jung-api-2.0.1.jar lib/jung-graph-impl-2.0.1.jar lib/jung-io-2.0.1.jar lib/jung-visualization-2.0.1.jar lib/miglayout-core-5.0.jar lib/miglayout-swing-5.0.jar lib/parallelcolt-0.10.1.jar lib/stax2-api-4.0.0.jar lib/woodstox-core-5.0.1.jar</Class-Path><!--@formatter:on-->
                                        </manifestEntries>
                                    </archive>
                                </configuration>
                            </execution>
                            <execution>
                                <id>net2plancli</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/assembly/Net2PlanCliAssembly.xml</descriptor>
                                    </descriptors>
                                    <archive>
                                        <manifest>
                                            <mainClass>com.net2plan.cli.CLINet2Plan</mainClass>
                                        </manifest>
                                        <manifestEntries>
                                            <!--@formatter:off--><Class-Path>lib/Net2Plan-lib.jar lib/collections-generic-4.01.jar lib/commons-cli-1.3.jar lib/commons-lang3-3.4.jar lib/guava-18.0.jar lib/jgrapht-core-0.9.1.jar lib/jna-4.1.0.jar lib/jom-0.1.16-1.0.jar lib/jsoup-1.8.3.jar lib/jung-algorithms-2.0.1.jar lib/jung-api-2.0.1.jar lib/jung-graph-impl-2.0.1.jar lib/jung-io-2.0.1.jar lib/jung-visualization-2.0.1.jar lib/miglayout-core-5.0.jar lib/miglayout-swing-5.0.jar lib/parallelcolt-0.10.1.jar lib/stax2-api-4.0.0.jar lib/woodstox-core-5.0.1.jar</Class-Path><!--@formatter:on-->
                                        </manifestEntries>
                                    </archive>
                                </configuration>
                            </execution>
                            <execution>
                                <id>assembly</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/assembly/assembly.xml</descriptor>
                                    </descriptors>
                                    <appendAssemblyId>false</appendAssemblyId>
                                </configuration>
                            </execution>
                            <execution>
                                <id>javadoc-dependencies</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/assembly/TagletAssembly.xml</descriptor>
                                    </descriptors>
                                    <appendAssemblyId>true</appendAssemblyId>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>clean-after</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <delete dir="${project.build.directory}"
                                                includes="*.jar net2plan-0.4.0-Net2Plan-src.zip"/>
                                        <delete dir="${project.build.directory}/colt"/>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>make-dir</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <mkdir dir="${project.build.directory}/site/apidocs/examples"/>
                                        <mkdir dir="${project.build.directory}/site/apidocs/api"/>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <unzip src="${project.basedir}/src/main/resources/lib/colt-1.2.0.jar"
                                               dest="${project.build.directory}/colt"/>
                                        <unzip src="${project.basedir}/src/main/resources/lib/parallelcolt-0.10.1.jar"
                                               dest="${project.build.directory}/colt"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Generate Javadoc -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>2.10.3</version>
                        <executions>
                            <execution>
                                <id>net2plan-javadoc</id>
                                <goals>
                                    <goal>javadoc</goal>
                                </goals>
                                <configuration>
                                    <show>public</show>
                                    <author>true</author>
                                    <nodeprecated>true</nodeprecated>
                                    <nodeprecatedlist>false</nodeprecatedlist>
                                    <noindex>false</noindex>
                                    <nonavbar>false</nonavbar>
                                    <notree>false</notree>
                                    <source>1.7</source>
                                    <splitindex>true</splitindex>
                                    <use>true</use>
                                    <version>true</version>
                                    <additionalparam>-d ${project.build.directory}/site/apidocs/api -XdoClint:none
                                    </additionalparam>
                                    <sourcepath>${project.basedir}/src/main/java</sourcepath>
                                    <sourceFileIncludes>
                                        <include>com/net2plan/interfaces/networkDesign/**</include>
                                        <include>com/net2plan/interfaces/simulation/**</include>
                                        <include>com/net2plan/libraries/**</include>
                                        <include>com/net2plan/utils/**</include>
                                    </sourceFileIncludes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>net2planExamples-javadoc</id>
                                <goals>
                                    <goal>javadoc</goal>
                                </goals>
                                <configuration>
                                    <show>public</show>
                                    <author>false</author>
                                    <nodeprecated>true</nodeprecated>
                                    <nodeprecatedlist>true</nodeprecatedlist>
                                    <noindex>false</noindex>
                                    <nonavbar>false</nonavbar>
                                    <notree>false</notree>
                                    <source>1.7</source>
                                    <splitindex>true</splitindex>
                                    <use>true</use>
                                    <version>true</version>
                                    <linksource>true</linksource>
                                    <additionalparam>-d ${project.build.directory}/site/apidocs/examples -XdoClint:none
                                    </additionalparam>
                                    <noqualifier>
                                        java.lang:java.util:java.io:java.awt:java.net:java.awt.geom:javax.swing:cern.colt.matrix.tdouble
                                    </noqualifier>
                                    <taglets>
                                        <taglet>
                                            <tagletClass>com.net2plan.documentation.Taglet_BookSections</tagletClass>
                                        </taglet>
                                        <taglet>
                                            <tagletClass>com.net2plan.documentation.Taglet_Description</tagletClass>
                                        </taglet>
                                        <taglet>
                                            <tagletClass>com.net2plan.documentation.Taglet_Keywords</tagletClass>
                                        </taglet>
                                        <taglet>
                                            <tagletClass>com.net2plan.documentation.Taglet_InputParameters</tagletClass>
                                        </taglet>
                                    </taglets>
                                    <tagletpath>
                                        ${project.build.directory}/${project.artifactId}-${project.version}-Taglet.jar
                                    </tagletpath>
                                    <sourcepath>${project.basedir}/src/main/java</sourcepath>
                                    <sourceFileIncludes>
                                        <include>com/net2plan/examples/general/onlineSim/**</include>
                                        <include>com/net2plan/examples/general/reports/**</include>
                                        <include>com/net2plan/examples/ocnbook/offline/**</include>
                                        <include>com/net2plan/examples/ocnbook/onlineSim/**</include>
                                        <include>com/net2plan/examples/ocnbook/reports/**</include>
                                    </sourceFileIncludes>
                                    <sourceFileExcludes>
                                        <exclude>com/net2plan/examples/general/reports/robustness/**</exclude>
                                    </sourceFileExcludes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>keywordTable</id>
                                <goals>
                                    <goal>javadoc</goal>
                                </goals>
                                <configuration>
                                    <doclet>com.net2plan.documentation.CreateHTMLKeywords</doclet>
                                    <docletPath>
                                        ${project.build.directory}/${project.artifactId}-${project.version}-Taglet.jar
                                    </docletPath>
                                    <useStandardDocletOptions>false</useStandardDocletOptions>
                                    <sourcepath>${project.basedir}/src/main/java</sourcepath>
                                    <sourceFileIncludes>
                                        <include>com/net2plan/examples/general/onlineSim/**</include>
                                        <include>com/net2plan/examples/general/reports/**</include>
                                        <include>com/net2plan/examples/ocnbook/offline/**</include>
                                        <include>com/net2plan/examples/ocnbook/onlineSim/**</include>
                                        <include>com/net2plan/examples/ocnbook/reports/**</include>
                                    </sourceFileIncludes>
                                    <sourceFileExcludes>
                                        <exclude>com/net2plan/examples/general/reports/robustness/**</exclude>
                                    </sourceFileExcludes>
                                    <additionalparam>-outputFolder ${project.build.directory}/site/apidocs/examples
                                    </additionalparam>
                                </configuration>
                            </execution>
                            <execution>
                                <id>bookSectionsTable</id>
                                <goals>
                                    <goal>javadoc</goal>
                                </goals>
                                <configuration>
                                    <sourcepath>${project.basedir}/src/main/java</sourcepath>
                                    <sourceFileIncludes>
                                        <include>com/net2plan/examples/general/onlineSim/**</include>
                                        <include>com/net2plan/examples/general/reports/**</include>
                                        <include>com/net2plan/examples/ocnbook/offline/**</include>
                                        <include>com/net2plan/examples/ocnbook/onlineSim/**</include>
                                        <include>com/net2plan/examples/ocnbook/reports/**</include>
                                    </sourceFileIncludes>
                                    <sourceFileExcludes>
                                        <exclude>com/net2plan/examples/general/reports/robustness/**</exclude>
                                    </sourceFileExcludes>
                                    <doclet>com.net2plan.documentation.CreateBookSectionsTable</doclet>
                                    <docletPath>
                                        ${project.build.directory}/${project.artifactId}-${project.version}-Taglet.jar
                                    </docletPath>
                                    <useStandardDocletOptions>false</useStandardDocletOptions>
                                    <additionalparam>-outputFolder ${project.build.directory}/site/apidocs/examples
                                    </additionalparam>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>