    <profiles>
        <profile>
            <id>build-without-javadoc</id>

            <activation>
                <activeByDefault>true</activeByDefault>
                <jdk>[1.8,)</jdk>
            </activation>

            <build>
                <plugins>
                    <!-- Ignore default jar generation -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <id>default-jar</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Modifies the compiler to jdk 1.8 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.5.1</version>
                        <configuration>
                            <compilerVersion>1.8</compilerVersion>
                            <source>1.8</source>
                            <target>1.8</target>
                            <failOnError>true</failOnError>
                        </configuration>
                    </plugin>

                    <!-- Downloads dependencies into local folder -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.10</version>
                        <configuration>
                            <outputDirectory>${project.basedir}/src/main/resources/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                        <executions>
                            <execution>
                                <id>copy-dependencies</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Assembles the final project -->
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>2.6</version>
                        <configuration>
                            <appendAssemblyId>true</appendAssemblyId>
                        </configuration>
                        <executions>
                            <execution>
                                <id>non-executables</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/assembly/Net2PlanLibAssembly.xml</descriptor>
                                        <descriptor>src/assembly/Net2PlanSrcAssembly.xml</descriptor>
                                        <descriptor>src/assembly/defaultCLIAssembly.xml</descriptor>
                                        <descriptor>src/assembly/defaultGUIAssembly.xml</descriptor>
                                        <descriptor>src/assembly/defaultIOAssembly.xml</descriptor>
                                        <descriptor>src/assembly/BuiltInExamplesAssembly.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                            <execution>
                                <id>net2plan</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/assembly/Net2PlanAssembly.xml</descriptor>
                                    </descriptors>
                                    <archive>
                                        <manifest>
                                            <mainClass>com.net2plan.gui.GUINet2Plan</mainClass>
                                        </manifest>
                                        <manifestEntries>
                                            <!--@formatter:off--><Class-Path>${project.classpath}</Class-Path><!--@formatter:on-->
                                        </manifestEntries>
                                    </archive>
                                </configuration>
                            </execution>
                            <execution>
                                <id>net2plancli</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/assembly/Net2PlanCliAssembly.xml</descriptor>
                                    </descriptors>
                                    <archive>
                                        <manifest>
                                            <mainClass>com.net2plan.cli.CLINet2Plan</mainClass>
